{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "dist-electron",
		"rootDir": "electron",
		"module": "CommonJS",
		"target": "ES2020",
		"moduleResolution": "node",
		"lib": ["ES2020"],
		"types": ["node"],
		"sourceMap": true,
		"noEmit": false,
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["electron/**/*.ts"]
}
