{
  "name": "paperclaip",
  "version": "1.0.0",
  "description": "Your intelligent clipboard companion with dynamic loading and real-time updates",
  "main": "dist-electron/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:renderer": "vite --port 5173 --strictPort",
    "dev:main": "tsc -p tsconfig.electron.json --watch",
    "dev:electron": "wait-on http://localhost:5173 dist-electron/main.js && VITE_DEV_SERVER_URL=http://localhost:5173 electron dist-electron/main.js",
    "dev": "concurrently -k -n renderer,main,electron -c blue,green,magenta \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:main",
    "icons": "node scripts/gen-icons.mjs",
    "pack": "npm run icons && electron-builder --dir",
    "dist": "npm run icons && electron-builder",
    "package": "./scripts/package-app.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/node": "^24.3.0",
    "@vitejs/plugin-react": "^5.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "devDependencies": {
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.0",
    "dotenv": "^16.4.5",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "mysql2": "^3.11.3",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.4.32",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.paperclaip.app",
    "productName": "PaperclAIp",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*",
      "!node_modules/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
